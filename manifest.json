{
  "manifest_version": 3,
  "name": "Bolt.new Task Monitor",
  "version": "1.0.0",
  "description": "Monitor bolt.new pages for task completion and provide audio feedback",
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "offscreen"
  ],
  
  "host_permissions": [
    "https://bolt.new/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://bolt.new/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bolt.new Monitor",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "options_page": "options.html",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["sounds/*.mp3", "sounds/*.wav", "sounds/*.ogg"],
      "matches": ["https://bolt.new/*"]
    }
  ]
}